<% layout("/layouts/boilerplate") %>

<style>
    .recommendations-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 3rem 0;
        margin-bottom: 2rem;
        color: white;
        text-align: center;
    }

    .location-info {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        text-align: center;
    }

    .location-name {
        font-size: 2.5rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 1rem;
    }

    .location-stats {
        display: flex;
        justify-content: center;
        gap: 3rem;
        margin-bottom: 1rem;
    }

    .stat-item {
        text-align: center;
    }

    .stat-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: #667eea;
    }

    .stat-label {
        color: #7f8c8d;
        font-size: 0.9rem;
        text-transform: uppercase;
    }

    .recommendations-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 2rem;
        margin-bottom: 3rem;
    }

    .property-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .property-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }

    .property-image {
        width: 100%;
        height: 250px;
        object-fit: cover;
    }

    .property-content {
        padding: 1.5rem;
    }

    .property-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.5rem;
        line-height: 1.3;
    }

    .property-location {
        color: #7f8c8d;
        margin-bottom: 1rem;
        font-size: 0.95rem;
    }

    .property-details {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .detail-item {
        text-align: center;
        padding: 0.5rem;
        background: #f8f9fa;
        border-radius: 8px;
    }

    .detail-value {
        font-weight: 600;
        color: #2c3e50;
        font-size: 1.1rem;
    }

    .detail-label {
        color: #7f8c8d;
        font-size: 0.8rem;
        text-transform: uppercase;
    }

    .property-price {
        font-size: 1.5rem;
        font-weight: 700;
        color: #27ae60;
        margin-bottom: 1rem;
        text-align: center;
    }

    .property-actions {
        display: flex;
        gap: 0.5rem;
    }

    .btn-view {
        flex: 1;
        background: #667eea;
        border: none;
        color: white;
        padding: 0.75rem;
        border-radius: 8px;
        text-decoration: none;
        text-align: center;
        transition: background 0.3s ease;
    }

    .btn-view:hover {
        background: #5a6fd8;
        color: white;
    }

    .btn-favorite {
        background: #e74c3c;
        border: none;
        color: white;
        padding: 0.75rem;
        border-radius: 8px;
        transition: background 0.3s ease;
    }

    .btn-favorite:hover {
        background: #c0392b;
        color: white;
    }

    .btn-favorite.active {
        background: #27ae60;
    }

    .no-recommendations {
        text-align: center;
        padding: 3rem;
        color: #7f8c8d;
    }

    .recommendation-reason {
        background: #e8f5e8;
        color: #2e7d32;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.8rem;
        margin-bottom: 1rem;
        display: inline-block;
    }

    .location-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        background: #4caf50;
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        z-index: 10;
    }

    .property-card {
        position: relative;
    }
</style>

<div class="recommendations-header">
    <div class="container">
        <h1 class="mb-3">Location-Based Recommendations</h1>
        <p class="mb-0">Properties in your preferred locations</p>
    </div>
</div>

<div class="container">
    <div class="location-info">
        <h2 class="location-name"><%= city.charAt(0).toUpperCase() + city.slice(1) %></h2>
        <div class="location-stats">
            <div class="stat-item">
                <div class="stat-value"><%= recommendations ? recommendations.length : 0 %></div>
                <div class="stat-label">Properties</div>
            </div>
            <div class="stat-item">
                <div class="stat-value"><%= recommendations ? recommendations.filter(p => p.listingType === 'rent').length : 0 %></div>
                <div class="stat-label">For Rent</div>
            </div>
            <div class="stat-item">
                <div class="stat-value"><%= recommendations ? recommendations.filter(p => p.listingType === 'sale').length : 0 %></div>
                <div class="stat-label">For Sale</div>
            </div>
        </div>
    </div>

    <% if (recommendations && recommendations.length > 0) { %>
        <div class="recommendations-grid">
            <% recommendations.forEach(property => { %>
                <div class="property-card">
                    <div class="location-badge">
                        <i class="fas fa-map-marker-alt me-1"></i><%= city.charAt(0).toUpperCase() + city.slice(1) %>
                    </div>
                    
                    <img src="<%= property.images && property.images.length > 0 ? property.images[0].url : '/images/default-property.jpg' %>" 
                         alt="<%= property.title %>" class="property-image">
                    
                    <div class="property-content">
                        <div class="recommendation-reason">
                            <i class="fas fa-map-marker-alt me-1"></i>Location match
                        </div>
                        
                        <h3 class="property-title"><%= property.title %></h3>
                        <p class="property-location">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            <%= property.address?.street %>, <%= property.address?.city %>, <%= property.address?.state %>
                        </p>
                        
                        <div class="property-details">
                            <div class="detail-item">
                                <div class="detail-value"><%= property.bedrooms || 'N/A' %></div>
                                <div class="detail-label">Bedrooms</div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-value"><%= property.bathrooms || 'N/A' %></div>
                                <div class="detail-label">Bathrooms</div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-value"><%= property.area?.size || 'N/A' %></div>
                                <div class="detail-label"><%= property.area?.unit || 'sqft' %></div>
                            </div>
                        </div>
                        
                        <div class="property-price">
                            â‚¹<%= property.price?.amount?.toLocaleString() || 'N/A' %>
                            <small class="d-block text-muted">
                                <%= property.listingType === 'rent' ? '/month' : '' %>
                            </small>
                        </div>
                        
                        <div class="property-actions">
                            <a href="/listings/<%= property._id %>" class="btn-view">
                                <i class="fas fa-eye me-2"></i>View Details
                            </a>
                            <button class="btn-favorite" onclick="toggleFavorite('<%= property._id %>')" 
                                    data-property-id="<%= property._id %>">
                                <i class="fas fa-heart"></i>
                            </button>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="no-recommendations">
            <i class="fas fa-map-marker-alt fa-3x mb-3 text-muted"></i>
            <h3>No Properties Found in <%= city.charAt(0).toUpperCase() + city.slice(1) %></h3>
            <p>We couldn't find any properties in this location. Try searching for other cities or browse all properties.</p>
            <a href="/listings" class="btn btn-primary">Browse All Properties</a>
            <a href="/listings#searchSection" class="btn btn-outline-primary ms-2 scroll-to-search">Search Properties</a>
        </div>
    <% } %>
</div>

<script>
function toggleFavorite(propertyId) {
    const btn = event.target.closest('.btn-favorite');
    
    fetch('/favorites/toggle', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ propertyId: propertyId })
    })
    .then(response => response.json())
    .then(data => {
        if (data.action === 'added') {
            btn.classList.add('active');
            showToast('Property added to favorites!', 'success');
        } else {
            btn.classList.remove('active');
            showToast('Property removed from favorites!', 'info');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        showToast('Error updating favorites!', 'error');
    });
}

function showToast(message, type) {
    const toast = document.createElement('div');
    toast.className = `alert alert-${type === 'error' ? 'danger' : type} position-fixed`;
    toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
    toast.innerHTML = message;
    
    document.body.appendChild(toast);
    
    setTimeout(() => {
        toast.remove();
    }, 3000);
}

document.addEventListener('DOMContentLoaded', function() {
    const favoriteBtns = document.querySelectorAll('.btn-favorite');
    favoriteBtns.forEach(btn => {
        const propertyId = btn.dataset.propertyId;
        checkFavoriteStatus(propertyId, btn);
    });
});

function checkFavoriteStatus(propertyId, btn) {
    fetch(`/favorites/check/${propertyId}`)
        .then(response => response.json())
        .then(data => {
            if (data.isFavorite) {
                btn.classList.add('active');
            }
        })
        .catch(error => console.error('Error checking favorite status:', error));
}
</script>
