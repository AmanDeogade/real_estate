<% layout("/layouts/boilerplate") %>
<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <% if (user.profileImage && user.profileImage.url) { %>
                        <img src="<%= user.profileImage.url %>" class="rounded-circle mb-3" width="120" height="120" alt="Profile">
                    <% } else { %>
                        <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 120px; height: 120px;">
                            <i class="fa-solid fa-user fa-3x"></i>
                        </div>
                    <% } %>
                    
                    <h4 class="card-title"><%= user.displayName %></h4>
                    <span class="badge bg-primary mb-2">
                        <%= user.userType === 'buyer' ? 'Buyer/Renter' : 
                            user.userType === 'property_owner' ? 'Property Owner' : 'Broker' %>
                    </span>
                    
                    <% if (user.isVerified) { %>
                        <div class="text-success">
                            <i class="fa-solid fa-check-circle"></i> Verified Account
                        </div>
                    <% } %>
                    
                    <div class="mt-3">
                        <small class="text-muted">Member since <%= user.createdAt.toLocaleDateString() %></small>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Profile Information</h5>
                </div>
                <div class="card-body">
                    <form action="/profile" method="POST">
                        <input type="hidden" name="_method" value="PATCH">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="firstName" class="form-label">First Name</label>
                                    <input type="text" class="form-control" name="firstName" value="<%= user.firstName %>" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="lastName" class="form-label">Last Name</label>
                                    <input type="text" class="form-control" name="lastName" value="<%= user.lastName %>" required>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" name="email" value="<%= user.email %>" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone</label>
                            <input type="tel" class="form-control" name="phone" value="<%= user.phone %>" required>
                        </div>
                        
                        <% if (user.userType === 'property_owner') { %>
                            <hr>
                            <h6>Company Information</h6>
                            <div class="mb-3">
                                <label for="companyName" class="form-label">Company Name</label>
                                <input type="text" class="form-control" name="companyName" value="<%= user.companyName || '' %>">
                            </div>
                            <div class="mb-3">
                                <label for="licenseNumber" class="form-label">License Number</label>
                                <input type="text" class="form-control" name="licenseNumber" value="<%= user.licenseNumber || '' %>">
                            </div>
                        <% } %>
                        
                        <% if (user.userType === 'broker') { %>
                            <hr>
                            <h6>Broker Information</h6>
                            <div class="mb-3">
                                <label for="brokerLicense" class="form-label">Broker License</label>
                                <input type="text" class="form-control" name="brokerLicense" value="<%= user.brokerLicense || '' %>">
                            </div>
                            <div class="mb-3">
                                <label for="agency" class="form-label">Agency</label>
                                <input type="text" class="form-control" name="agency" value="<%= user.agency || '' %>">
                            </div>
                            <div class="mb-3">
                                <label for="specialization" class="form-label">Specializations</label>
                                <input type="text" class="form-control" name="specialization" value="<%= user.specialization ? user.specialization.join(', ') : '' %>" placeholder="e.g., residential, commercial, luxury">
                            </div>
                        <% } %>
                        
                        <button type="submit" class="btn btn-primary">Update Profile</button>
                    </form>
                </div>
            </div>
            
            <!-- Role-specific Dashboard Links -->
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <% if (user.userType === 'buyer') { %>
                        <a href="/favorites" class="btn btn-outline-primary me-2">
                            <i class="fa-solid fa-heart"></i> My Favorites
                        </a>
                        <a href="/listings" class="btn btn-outline-success">
                            <i class="fa-solid fa-search"></i> Browse Properties
                        </a>
                    <% } %>
                    
                    <% if (user.userType === 'property_owner') { %>
                        <a href="/listings/new" class="btn btn-outline-primary me-2">
                            <i class="fa-solid fa-plus"></i> Add New Property
                        </a>
                        <a href="/listings/my-listings" class="btn btn-outline-success">
                            <i class="fa-solid fa-list"></i> My Properties
                        </a>
                        
                        <!-- Special Owner Status -->
                        <div class="mt-3 p-3 border rounded">
                            <h6 class="mb-2">
                                <i class="fa-solid fa-crown text-warning"></i>
                                Special Owner Status
                            </h6>
                            <% if (user.isSpecialOwner) { %>
                                <div class="d-flex align-items-center justify-content-between">
                                    <div>
                                        <span class="badge bg-success me-2">
                                            <i class="fa-solid fa-check-circle"></i> Active
                                        </span>
                                        <small class="text-muted">
                                            Since: <%= user.specialOwnerSince ? user.specialOwnerSince.toLocaleDateString() : 'N/A' %>
                                        </small>
                                    </div>
                                    <span class="badge bg-warning text-dark">
                                        <i class="fa-solid fa-crown"></i> Special Owner
                                    </span>
                                </div>
                            <% } else { %>
                                <div class="d-flex align-items-center justify-content-between">
                                    <div>
                                        <span class="badge bg-secondary me-2">
                                            <i class="fa-solid fa-times-circle"></i> Inactive
                                        </span>
                                        <small class="text-muted">Upgrade for priority listing & enhanced features</small>
                                    </div>
                                    <a href="/payment/special-owner" class="btn btn-warning btn-sm">
                                        <i class="fa-solid fa-crown"></i> Upgrade Now
                                    </a>
                                </div>
                            <% } %>
                        </div>
                    <% } %>
                    
                    <% if (user.userType === 'broker') { %>
                        <a href="/leads/dashboard" class="btn btn-outline-primary me-2">
                            <i class="fa-solid fa-chart-line"></i> CRM Dashboard
                        </a>
                        <a href="/leads" class="btn btn-outline-success">
                            <i class="fa-solid fa-users"></i> Manage Leads
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
