        border-radius: 8px;
        font-size: 1rem;
        background: white;
        cursor: pointer;
    }

    .filter-checkbox {
        margin-right: 0.5rem;
    }

    .filter-checkbox-label {
        margin-right: 1rem;
        cursor: pointer;
        user-select: none;
    }

    .search-btn {
        background: #667eea;
        color: white;
        border: none;
        padding: 1rem 2rem;
        border-radius: 25px;
        font-size: 1.1rem;
        font-weight: 600;
