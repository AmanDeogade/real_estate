            }
        } catch (error) {
            console.error('Error:', error);
            showToast('Error', 'Failed to update inquiry status', 'error');
            // Revert to original value on error
            select.value = originalValue;
        } finally {
            // Re-enable select
            select.disabled = false;
        }
    }

