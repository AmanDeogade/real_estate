<% layout('/layouts/boilerplate') %>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-8">
            <!-- Lead Header -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h1 class="h2 mb-1"><%= lead.firstName %> <%= lead.lastName %></h1>
                            <p class="text-muted mb-0">Lead ID: <%= lead._id %></p>
                        </div>
                        <div class="d-flex gap-2">
                            <a href="/leads/<%= lead._id %>/edit" class="btn btn-outline-primary">
                                <i class="fas fa-edit me-2"></i>Edit Lead
                            </a>
                            <a href="/tasks/new?leadId=<%= lead._id %>" class="btn btn-success">
                                <i class="fas fa-tasks me-2"></i>Add Task
                            </a>
                            <a href="/leads" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Leads
                            </a>
                        </div>
                    </div>

                    <!-- Status and Priority Badges -->
                    <div class="d-flex gap-2 mb-3">
                        <% 
                            const statusColors = {
                                'new': 'bg-secondary',
                                'contacted': 'bg-info',
                                'qualified': 'bg-primary',
                                'proposal_sent': 'bg-warning',
                                'negotiation': 'bg-warning',
                                'closed': 'bg-success'
                            };
                            const statusLabels = {
                                'new': 'New',
                                'contacted': 'Contacted',
                                'qualified': 'Qualified',
                                'proposal_sent': 'Proposal Sent',
                                'negotiation': 'Negotiation',
                                'closed': 'Closed'
                            };
                        %>
                        <span class="badge <%= statusColors[lead.status] || 'bg-secondary' %> fs-6">
                            <%= statusLabels[lead.status] || lead.status %>
                        </span>
                        <% 
                            const priorityColors = {
                                'high': 'bg-danger',
                                'medium': 'bg-warning',
                                'low': 'bg-success'
                            };
                        %>
                        <span class="badge <%= priorityColors[lead.priority] || 'bg-secondary' %> fs-6">
                            <%= lead.priority.charAt(0).toUpperCase() + lead.priority.slice(1) %> Priority
                        </span>
                        <span class="badge bg-info fs-6">
                            <%= lead.interest.charAt(0).toUpperCase() + lead.interest.slice(1) %>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Lead Details -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Lead Details</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-primary mb-3">Contact Information</h6>
                            <div class="mb-3">
                                <strong>Email:</strong>
                                <a href="mailto:<%= lead.email %>" class="text-decoration-none"><%= lead.email %></a>
                            </div>
                            <div class="mb-3">
                                <strong>Phone:</strong>
                                <a href="tel:<%= lead.phone %>" class="text-decoration-none"><%= lead.phone %></a>
                            </div>
                            <div class="mb-3">
                                <strong>Source:</strong>
                                <span class="badge bg-light text-dark"><%= lead.source || 'Not specified' %></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-primary mb-3">Property Preferences</h6>
                            <div class="mb-3">
                                <strong>Property Type:</strong>
                                <span><%= lead.propertyType || 'Not specified' %></span>
                            </div>
                            <div class="mb-3">
                                <strong>Budget:</strong>
                                <span><%= lead.budget || 'Not specified' %></span>
                            </div>
                            <div class="mb-3">
                                <strong>Timeline:</strong>
                                <span><%= lead.timeline || 'Not specified' %></span>
                            </div>
                            <div class="mb-3">
                                <strong>Preferred Location:</strong>
                                <span><%= lead.preferredLocation || 'Not specified' %></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Related Property -->
            <% if (lead.relatedProperty) { %>
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-home me-2"></i>Related Property</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <i class="fas fa-building fa-2x text-primary"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">
                                    <a href="/listings/<%= lead.relatedProperty._id %>" class="text-decoration-none">
                                        <%= lead.relatedProperty.title %>
                                    </a>
                                </h6>
                                <p class="text-muted mb-0"><%= lead.relatedProperty.address %></p>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>

            <!-- Notes Section -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-sticky-note me-2"></i>Notes</h5>
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addNoteModal">
                        <i class="fas fa-plus me-2"></i>Add Note
                    </button>
                </div>
                <div class="card-body">
                    <% if (lead.notes && lead.notes.length > 0) { %>
                        <% lead.notes.forEach(note => { %>
                            <div class="border-bottom pb-3 mb-3">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <strong><%= note.content %></strong>
                                    <small class="text-muted"><%= new Date(note.createdAt).toLocaleString() %></small>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p class="text-muted text-center py-3">No notes added yet. Add your first note to track interactions with this lead.</p>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Quick Actions -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-info" onclick="sendEmail('<%= lead.email %>','<%= lead.firstName %> <%= lead.lastName %>')">
                            <i class="fas fa-envelope me-2"></i>Send Email
                        </button>
                        <button class="btn btn-outline-warning" onclick="scheduleMeeting('<%= lead._id %>')">
                            <i class="fas fa-calendar me-2"></i>Schedule Meeting
                        </button>
                        <button class="btn btn-outline-primary" onclick="openUpdateStatusModal('<%= lead._id %>','<%= lead.status %>','<%= lead.priority %>')">
                            <i class="fas fa-edit me-2"></i>Update Status
                        </button>
                    </div>
                </div>
            </div>

            <!-- Lead Timeline -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-clock me-2"></i>Timeline</h6>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-success"></div>
                            <div class="timeline-content">
                                <h6 class="mb-1">Lead Created</h6>
                                <small class="text-muted"><%= new Date(lead.createdAt).toLocaleDateString() %></small>
                            </div>
                        </div>
                        <% if (lead.updatedAt && lead.updatedAt !== lead.createdAt) { %>
                            <div class="timeline-item">
                                <div class="timeline-marker bg-info"></div>
                                <div class="timeline-content">
                                    <h6 class="mb-1">Last Updated</h6>
                                    <small class="text-muted"><%= new Date(lead.updatedAt).toLocaleDateString() %></small>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Related Tasks -->
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-tasks me-2"></i>Related Tasks</h6>
                </div>
                <div class="card-body">
                    <% if (lead.tasks && lead.tasks.length > 0) { %>
                        <% lead.tasks.slice(0, 3).forEach(task => { %>
                            <div class="d-flex align-items-center mb-2">
                                <div class="me-2">
                                    <i class="fas fa-circle text-<%= task.status === 'completed' ? 'success' : task.status === 'in_progress' ? 'warning' : 'secondary' %>"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="fw-bold"><%= task.title %></div>
                                    <small class="text-muted">Due: <%= new Date(task.dueDate).toLocaleDateString() %></small>
                                </div>
                            </div>
                        <% }); %>
                        <% if (lead.tasks.length > 3) { %>
                            <div class="text-center mt-2">
                                <a href="/tasks?leadId=<%= lead._id %>" class="btn btn-sm btn-outline-primary">
                                    View All Tasks (<%= lead.tasks.length %>)
                                </a>
                            </div>
                        <% } %>
                    <% } else { %>
                        <p class="text-muted text-center py-2">No tasks assigned yet.</p>
                        <div class="text-center">
                            <a href="/tasks/new?leadId=<%= lead._id %>" class="btn btn-sm btn-primary">
                                <i class="fas fa-plus me-2"></i>Add Task
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Note Modal -->
<div class="modal fade" id="addNoteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Note</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/leads/<%= lead._id %>/notes" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="noteContent" class="form-label">Note Content</label>
                        <textarea class="form-control" id="noteContent" name="content" rows="4" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Note</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
.timeline {
    position: relative;
    padding-left: 20px;
}

.timeline-item {
    position: relative;
    margin-bottom: 20px;
}

.timeline-marker {
    position: absolute;
    left: -30px;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 2px solid #fff;
    box-shadow: 0 0 0 3px #dee2e6;
}

.timeline-content {
    padding-left: 10px;
}

.timeline-item:not(:last-child)::after {
    content: '';
    position: absolute;
    left: -24px;
    top: 12px;
    width: 2px;
    height: calc(100% + 8px);
    background-color: #dee2e6;
}
</style>

<script>
function contactLead(leadId) {
    // Placeholder for contact functionality
    alert('Contact functionality will be implemented here');
}

function sendEmail(leadId) {
    // Open Gmail compose with prefilled recipient and subject/body
    const email = arguments[0] || '';
    const name = arguments[1] || '';
    const subject = encodeURIComponent(`Regarding your interest, ${name}`);
    const body = encodeURIComponent(`Hi ${name},%0D%0A%0D%0AThanks for your interest. I wanted to follow up regarding your inquiry.%0D%0A%0D%0ARegards,`);
    const gmailUrl = `https://mail.google.com/mail/?view=cm&fs=1&to=${encodeURIComponent(email)}&su=${subject}&body=${body}`;
    window.open(gmailUrl, '_blank');
}

function scheduleMeeting(leadId) {
    // Redirect to task creation with prefilled lead and type=property_viewing
    const params = new URLSearchParams();
    if (leadId) params.set('leadId', leadId);
    params.set('type', 'property_viewing');
    // optionally prefill dueDate to tomorrow
    const tomorrow = new Date();
    tomorrow.setDate(tomorrow.getDate() + 1);
    const yyyy = tomorrow.getFullYear();
    const mm = String(tomorrow.getMonth() + 1).padStart(2, '0');
    const dd = String(tomorrow.getDate()).padStart(2, '0');
    params.set('dueDate', `${yyyy}-${mm}-${dd}`);

    window.location.href = `/tasks/new?${params.toString()}`;
}

function updateStatus(leadId) {
        // kept for backward compatibility
        openUpdateStatusModal(leadId);
}

// Update Status modal helper
function openUpdateStatusModal(leadId, currentStatus, currentPriority) {
        // Populate modal fields
        let modalHtml = `
        <div class="modal fade" id="updateStatusModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Update Lead Status</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <form id="updateStatusForm">
                            <input type="hidden" id="updateLeadId" value="${leadId}">
                            <div class="mb-3">
                                <label class="form-label">Status</label>
                                <select id="newStatus" class="form-select">
                                    <option value="new">New</option>
                                    <option value="contacted">Contacted</option>
                                    <option value="qualified">Qualified</option>
                                    <option value="proposal_sent">Proposal Sent</option>
                                    <option value="negotiation">Negotiation</option>
                                    <option value="closed">Closed</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Priority</label>
                                <select id="newPriority" class="form-select">
                                    <option value="low">Low</option>
                                    <option value="medium">Medium</option>
                                    <option value="high">High</option>
                                    <option value="urgent">Urgent</option>
                                </select>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" id="saveStatusBtn">Save</button>
                    </div>
                </div>
            </div>
        </div>`;

        // Append modal to body (remove any existing)
        document.getElementById('updateStatusModal')?.remove?.();
        const wrapper = document.createElement('div');
        wrapper.innerHTML = modalHtml;
        document.body.appendChild(wrapper);

        // Set current values
        document.getElementById('newStatus').value = currentStatus || 'new';
        document.getElementById('newPriority').value = currentPriority || 'medium';

        // Show modal
        const modalEl = document.getElementById('updateStatusModal');
        const bsModal = new bootstrap.Modal(modalEl);
        bsModal.show();

        document.getElementById('saveStatusBtn').addEventListener('click', async function() {
                const status = document.getElementById('newStatus').value;
                const priority = document.getElementById('newPriority').value;

                try {
                        const res = await fetch(`/leads/${leadId}/status`, {
                                method: 'PATCH',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({ status, priority })
                        });
                        const data = await res.json();
                        if (data && data.success) {
                                location.reload();
                        } else {
                                alert((data && data.message) || 'Failed to update status');
                        }
                } catch (err) {
                        console.error('Error updating status', err);
                        alert('Error updating status');
                }
        });
}
</script>
