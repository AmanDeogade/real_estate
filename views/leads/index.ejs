<% layout('/layouts/boilerplate') %>

<%- include("../includes/flash.ejs") %>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1">Lead Management</h1>
            <p class="text-muted mb-0">Manage and track your leads</p>
        </div>
        <div>
            <a href="/leads/new" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add New Lead
            </a>
        </div>
    </div>

    <!-- Filters and Search -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="GET" class="row g-3">
                <div class="col-md-3">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-select" id="status" name="status">
                        <option value="">All Statuses</option>
                        <option value="new" <%= query.status === 'new' ? 'selected' : '' %>>New</option>
                        <option value="contacted" <%= query.status === 'contacted' ? 'selected' : '' %>>Contacted</option>
                        <option value="qualified" <%= query.status === 'qualified' ? 'selected' : '' %>>Qualified</option>
                        <option value="proposal_sent" <%= query.status === 'proposal_sent' ? 'selected' : '' %>>Proposal Sent</option>
                        <option value="negotiation" <%= query.status === 'negotiation' ? 'selected' : '' %>>Negotiation</option>
                        <option value="closed" <%= query.status === 'closed' ? 'selected' : '' %>>Closed</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="priority" class="form-label">Priority</label>
                    <select class="form-select" id="priority" name="priority">
                        <option value="">All Priorities</option>
                        <option value="high" <%= query.priority === 'high' ? 'selected' : '' %>>High</option>
                        <option value="medium" <%= query.priority === 'medium' ? 'selected' : '' %>>Medium</option>
                        <option value="low" <%= query.priority === 'low' ? 'selected' : '' %>>Low</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="interest" class="form-label">Interest</label>
                    <select class="form-select" id="interest" name="interest">
                        <option value="">All Interests</option>
                        <option value="buy" <%= query.interest === 'buy' ? 'selected' : '' %>>Buy</option>
                        <option value="rent" <%= query.interest === 'rent' ? 'selected' : '' %>>Rent</option>
                        <option value="sell" <%= query.interest === 'sell' ? 'selected' : '' %>>Sell</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="search" class="form-label">Search</label>
                    <input type="text" class="form-control" id="search" name="search" value="<%= query.search || '' %>" placeholder="Name, email, phone...">
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-search me-2"></i>Filter
                    </button>
                    <a href="/leads" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Leads Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Leads (<%= leads.length %>)</h5>
        </div>
        <div class="card-body p-0">
            <% if (leads.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Contact</th>
                                <th>Interest</th>
                                <% if (userType === 'property_owner') { %>
                                    <th>Property</th>
                                    <th>Assigned Broker</th>
                                <% } else if (userType === 'broker') { %>
                                    <th>Property</th>
                                <% } %>
                                <th>Status</th>
                                <th>Priority</th>
                                <th>Source</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% leads.forEach(lead => { %>
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                                <%= lead.firstName.charAt(0).toUpperCase() %><%= lead.lastName.charAt(0).toUpperCase() %>
                                            </div>
                                            <div>
                                                <div class="fw-bold">
                                                    <a href="/leads/<%= lead._id %>" class="text-decoration-none">
                                                        <%= lead.firstName %> <%= lead.lastName %>
                                                    </a>
                                                </div>
                                                <small class="text-muted">ID: <%= lead._id.toString().slice(-6) %></small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <div><a href="mailto:<%= lead.email %>" class="text-decoration-none"><%= lead.email %></a></div>
                                            <small class="text-muted"><%= lead.phone %></small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-info"><%= lead.interest.charAt(0).toUpperCase() + lead.interest.slice(1) %></span>
                                    </td>
                                    <% if (userType === 'property_owner') { %>
                                        <td>
                                            <% if (lead.relatedProperty) { %>
                                                <div>
                                                    <div class="fw-bold"><%= lead.relatedProperty.title %></div>
                                                    <small class="text-muted"><%= lead.relatedProperty.address?.city || 'Location not specified' %></small>
                                                </div>
                                            <% } else { %>
                                                <span class="text-muted">No property linked</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (lead.assignedBroker) { %>
                                                <div>
                                                    <div class="fw-bold"><%= lead.assignedBroker.firstName %> <%= lead.assignedBroker.lastName %></div>
                                                    <small class="text-muted"><%= lead.assignedBroker.email %></small>
                                                </div>
                                            <% } else { %>
                                                <span class="text-muted">No broker assigned</span>
                                            <% } %>
                                        </td>
                                    <% } else if (userType === 'broker') { %>
                                        <td>
                                            <% if (lead.relatedProperty) { %>
                                                <div>
                                                    <div class="fw-bold"><%= lead.relatedProperty.title %></div>
                                                    <small class="text-muted"><%= lead.relatedProperty.address?.city || 'Location not specified' %></small>
                                                </div>
                                            <% } else { %>
                                                <span class="text-muted">No property linked</span>
                                            <% } %>
                                        </td>
                                    <% } %>
                                    <td>
                                        <% 
                                            const statusColors = {
                                                'new': 'bg-secondary',
                                                'contacted': 'bg-info',
                                                'qualified': 'bg-primary',
                                                'proposal_sent': 'bg-warning',
                                                'negotiation': 'bg-warning',
                                                'closed': 'bg-success'
                                            };
                                            const statusLabels = {
                                                'new': 'New',
                                                'contacted': 'Contacted',
                                                'qualified': 'Qualified',
                                                'proposal_sent': 'Proposal Sent',
                                                'negotiation': 'Negotiation',
                                                'closed': 'Closed'
                                            };
                                        %>
                                        <span class="badge <%= statusColors[lead.status] || 'bg-secondary' %>">
                                            <%= statusLabels[lead.status] || lead.status %>
                                        </span>
                                    </td>
                                    <td>
                                        <% 
                                            const priorityColors = {
                                                'high': 'bg-danger',
                                                'medium': 'bg-warning',
                                                'low': 'bg-success'
                                            };
                                        %>
                                        <span class="badge <%= priorityColors[lead.priority] || 'bg-secondary' %>">
                                            <%= lead.priority.charAt(0).toUpperCase() + lead.priority.slice(1) %>
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark"><%= lead.source || 'Not specified' %></span>
                                    </td>
                                    <td>
                                        <small class="text-muted"><%= new Date(lead.createdAt).toLocaleDateString() %></small>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="/leads/<%= lead._id %>" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="/leads/<%= lead._id %>/edit" class="btn btn-sm btn-outline-secondary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="/tasks/new?leadId=<%= lead._id %>" class="btn btn-sm btn-outline-success" title="Add Task">
                                                <i class="fas fa-tasks"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No leads found</h5>
                    <p class="text-muted">Get started by adding your first lead</p>
                    <a href="/leads/new" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Add New Lead
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</div>

<style>
.avatar-sm {
    width: 40px;
    height: 40px;
    font-size: 14px;
    font-weight: 600;
}
</style>
