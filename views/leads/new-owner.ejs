<% layout('/layouts/boilerplate') %>
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h2 mb-1">Add New Lead from Buyers</h1>
                    <p class="text-muted mb-0">Select a buyer from the list to create a new lead</p>
                </div>
                <div>
                    <a href="/leads" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Leads
                    </a>
                </div>
            </div>

            <!-- Search and Filter -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                <input type="text" class="form-control" id="searchBuyers" placeholder="Search buyers by name or email...">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" id="sortBuyers">
                                <option value="newest">Newest First</option>
                                <option value="oldest">Oldest First</option>
                                <option value="name">Name A-Z</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <div class="d-grid">
                                <button class="btn btn-outline-primary" onclick="resetFilters()">
                                    <i class="fas fa-refresh me-2"></i>Reset Filters
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Buyers List -->
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-users me-2"></i>Available Buyers (<span id="buyerCount"><%= buyers.length %></span>)</h5>
                </div>
                <div class="card-body p-0">
                    <% if (buyers && buyers.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Select</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Registered</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody id="buyersTable">
                                    <% buyers.forEach(buyer => { %>
                                        <tr class="buyer-row" data-name="<%= buyer.firstName.toLowerCase() %> <%= buyer.lastName.toLowerCase() %>" data-email="<%= buyer.email.toLowerCase() %>">
                                            <td>
                                                <div class="form-check">
                                                    <input class="form-check-input buyer-checkbox" type="checkbox" value="<%= buyer._id %>" id="buyer_<%= buyer._id %>">
                                                    <label class="form-check-label" for="buyer_<%= buyer._id %>"></label>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                                        <%= buyer.firstName.charAt(0).toUpperCase() %><%= buyer.lastName.charAt(0).toUpperCase() %>
                                                    </div>
                                                    <div>
                                                        <strong><%= buyer.firstName %> <%= buyer.lastName %></strong>
                                                    </div>
                                                </div>
                                            </td>
                                            <td><%= buyer.email %></td>
                                            <td><%= buyer.phone || 'Not provided' %></td>
                                            <td>
                                                <small class="text-muted">
                                                    <%= new Date(buyer.createdAt).toLocaleDateString() %>
                                                </small>
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-primary open-lead-modal-btn"
                                                        data-buyer-id="<%= buyer._id %>"
                                                        data-first-name="<%= buyer.firstName %>"
                                                        data-last-name="<%= buyer.lastName %>"
                                                        data-email="<%= buyer.email %>"
                                                        data-phone="<%= buyer.phone || '' %>"
                                                        onclick="openLeadModal(this)">
                                                    <i class="fas fa-plus me-1"></i>Add as Lead
                                                </button>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No buyers found</h5>
                            <p class="text-muted">There are no registered buyers to add as leads.</p>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Bulk Actions -->
            <div class="card mt-4" id="bulkActionsCard" style="display: none;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <span id="selectedCount">0</span> buyer(s) selected
                        </div>
                        <div>
                            <button class="btn btn-primary" onclick="addMultipleAsLeads()">
                                <i class="fas fa-plus me-2"></i>Add Selected as Leads
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Lead Details Modal -->
<div class="modal fade" id="leadModal" tabindex="-1" aria-labelledby="leadModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="leadModalLabel">Create Lead for <span id="modalBuyerName"></span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="leadForm" action="/leads" method="POST">
                <div class="modal-body">
                    <input type="hidden" id="selectedBuyerId" name="buyerId">
                    <input type="hidden" id="selectedBuyerEmail" name="email">
                    
                    <!-- Buyer Info (Read-only) -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="text-primary mb-3">
                                <i class="fas fa-user me-2"></i>Buyer Information
                            </h6>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Name</label>
                            <input type="text" class="form-control" id="modalBuyerNameInput" readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" id="modalBuyerEmail" readonly>
                        </div>
                    </div>

                    <!-- Lead Details -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="text-primary mb-3">
                                <i class="fas fa-cog me-2"></i>Lead Details
                            </h6>
                        </div>
                        <div class="col-md-6">
                            <label for="interest" class="form-label">Interest *</label>
                            <select class="form-select" id="interest" name="interest" required>
                                <option value="">Select interest</option>
                                <option value="buy">Buy</option>
                                <option value="rent">Rent</option>
                                <option value="sell">Sell</option>
                                <option value="invest">Invest</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="propertyType" class="form-label">Property Type</label>
                            <select class="form-select" id="propertyType" name="propertyType">
                                <option value="">Select property type</option>
                                <option value="apartment">Apartment</option>
                                <option value="house">House</option>
                                <option value="condo">Condo</option>
                                <option value="townhouse">Townhouse</option>
                                <option value="commercial">Commercial</option>
                                <option value="land">Land</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label for="budget" class="form-label">Budget Range</label>
                            <select class="form-select" id="budget" name="budget">
                                <option value="">Select budget range</option>
                                <option value="under_100k">Under ₹10,00,000</option>
                                <option value="100k_200k">₹10,00,000 - ₹20,00,000</option>
                                <option value="200k_300k">₹20,00,000 - ₹30,00,000</option>
                                <option value="300k_500k">₹30,00,000 - ₹50,00,000</option>
                                <option value="500k_750k">₹50,00,000 - ₹75,00,000</option>
                                <option value="750k_1m">₹75,00,000 - ₹1,00,00,000</option>
                                <option value="over_1m">Over ₹1,00,00,000</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="preferredLocation" class="form-label">Preferred Location</label>
                            <input type="text" class="form-control" id="preferredLocation" name="preferredLocation" placeholder="e.g., Downtown, Suburbs">
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label for="priority" class="form-label">Priority *</label>
                            <select class="form-select" id="priority" name="priority" required>
                                <option value="">Select priority</option>
                                <option value="low">Low</option>
                                <option value="medium" selected>Medium</option>
                                <option value="high">High</option>
                                <option value="urgent">Urgent</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="source" class="form-label">Lead Source</label>
                            <select class="form-select" id="source" name="source">
                                <option value="">Select source</option>
                                <option value="website">Website</option>
                                <option value="referral">Referral</option>
                                <option value="social_media">Social Media</option>
                                <option value="open_house">Open House</option>
                                <option value="cold_call">Cold Call</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                    </div>

                    <!-- Assign Broker (Property owners can assign a broker when creating lead) -->
                    <% if (typeof brokers !== 'undefined' && brokers && brokers.length > 0) { %>
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label for="assignedBroker" class="form-label">Assign Broker</label>
                                <select class="form-select" id="assignedBroker" name="assignedBroker">
                                    <option value="">Select a broker (optional)</option>
                                    <% brokers.forEach(broker => { %>
                                        <option value="<%= broker._id %>"><%= broker.firstName %> <%= broker.lastName %> - <%= broker.email %></option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>
                    <% } %>

                    <div class="mb-4">
                        <label for="notes" class="form-label">Initial Notes</label>
                        <textarea class="form-control" id="notes" name="notes" rows="3" placeholder="Add any initial notes about this lead..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Create Lead
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
// Search and filter functionality
document.getElementById('searchBuyers').addEventListener('input', function() {
    filterBuyers();
});

document.getElementById('sortBuyers').addEventListener('change', function() {
    sortBuyers();
});

function filterBuyers() {
    const searchTerm = document.getElementById('searchBuyers').value.toLowerCase();
    const rows = document.querySelectorAll('.buyer-row');
    let visibleCount = 0;

    rows.forEach(row => {
        const name = row.dataset.name;
        const email = row.dataset.email;
        
        if (name.includes(searchTerm) || email.includes(searchTerm)) {
            row.style.display = '';
            visibleCount++;
        } else {
            row.style.display = 'none';
        }
    });

    document.getElementById('buyerCount').textContent = visibleCount;
}

function sortBuyers() {
    const sortBy = document.getElementById('sortBuyers').value;
    const tbody = document.getElementById('buyersTable');
    const rows = Array.from(tbody.querySelectorAll('.buyer-row'));

    rows.sort((a, b) => {
        switch (sortBy) {
            case 'name':
                const nameA = a.dataset.name;
                const nameB = b.dataset.name;
                return nameA.localeCompare(nameB);
            case 'newest':
                return 0; // Already sorted by newest
            case 'oldest':
                return 0; // Would need to reverse
            default:
                return 0;
        }
    });

    // Clear and re-append sorted rows
    tbody.innerHTML = '';
    rows.forEach(row => tbody.appendChild(row));
}

function resetFilters() {
    document.getElementById('searchBuyers').value = '';
    document.getElementById('sortBuyers').value = 'newest';
    filterBuyers();
    sortBuyers();
}

// Checkbox functionality
document.addEventListener('change', function(e) {
    if (e.target.classList.contains('buyer-checkbox')) {
        updateBulkActions();
    }
});

function updateBulkActions() {
    const checkedBoxes = document.querySelectorAll('.buyer-checkbox:checked');
    const bulkActionsCard = document.getElementById('bulkActionsCard');
    const selectedCount = document.getElementById('selectedCount');

    selectedCount.textContent = checkedBoxes.length;
    
    if (checkedBoxes.length > 0) {
        bulkActionsCard.style.display = 'block';
    } else {
        bulkActionsCard.style.display = 'none';
    }
}

// Add single buyer as lead
function openLeadModal(btn) {
    const buyerId = btn.dataset.buyerId;
    const firstName = btn.dataset.firstName;
    const lastName = btn.dataset.lastName;
    const email = btn.dataset.email;
    const phone = btn.dataset.phone || '';

    document.getElementById('selectedBuyerId').value = buyerId;
    document.getElementById('selectedBuyerEmail').value = email;
    document.getElementById('modalBuyerName').textContent = firstName + ' ' + lastName;
    document.getElementById('modalBuyerNameInput').value = firstName + ' ' + lastName;
    document.getElementById('modalBuyerEmail').value = email;

    const modal = new bootstrap.Modal(document.getElementById('leadModal'));
    modal.show();
}

// Add multiple buyers as leads
function addMultipleAsLeads() {
    const checkedBoxes = document.querySelectorAll('.buyer-checkbox:checked');
    
    if (checkedBoxes.length === 0) {
        alert('Please select at least one buyer.');
        return;
    }

    if (confirm(`Are you sure you want to add ${checkedBoxes.length} buyer(s) as leads with default settings?`)) {
        // Create a form to submit multiple leads
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/leads/bulk';
        form.style.display = 'none';

        checkedBoxes.forEach(checkbox => {
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'buyerIds';
            input.value = checkbox.value;
            form.appendChild(input);
        });

        document.body.appendChild(form);
        form.submit();
    }
}

// Form validation
document.getElementById('leadForm').addEventListener('submit', function(e) {
    const interest = document.getElementById('interest').value;
    const priority = document.getElementById('priority').value;

    if (!interest || !priority) {
        e.preventDefault();
        alert('Please fill in all required fields.');
        return false;
    }
});
</script>

<style>
.avatar-sm {
    width: 40px;
    height: 40px;
    font-size: 14px;
    font-weight: bold;
}

.buyer-row:hover {
    background-color: #f8f9fa;
}

.table th {
    border-top: none;
    font-weight: 600;
    color: #495057;
}

.card-header {
    border-bottom: 1px solid rgba(0,0,0,.125);
}

.form-check-input:checked {
    background-color: #0d6efd;
    border-color: #0d6efd;
}

.btn-sm {
    padding: 0.25rem 0.5rem;
    font-size: 0.875rem;
}
</style>


