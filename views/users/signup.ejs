<% layout("/layouts/boilerplate") %>

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="text-center mb-5">
                <h1 class="display-4 text-primary mb-3">Join Karnavat&Associates</h1>
                <p class="lead text-muted">Create your account and start your real estate journey</p>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card shadow border-0">
                        <div class="card-header bg-primary text-white text-center">
                            <h4 class="mb-0">Create Your Account</h4>
                        </div>
                        <div class="card-body p-4">
                            <form action="/signup" method="POST" class="needs-validation" novalidate>
                                <!-- User Type Selection -->
                                <div class="mb-4">
                                    <label for="userType" class="form-label fw-bold">I am a:</label>
                                    <select name="userType" id="userType" class="form-select form-select-lg" required onchange="toggleFields()">
                                        <option value="">Select your role</option>
                                        <option value="buyer">üè† Buyer/Renter</option>
                                        <option value="property_owner">üè¢ Property Owner/Agency</option>
                                        <option value="broker">üëî Real Estate Broker/Agent</option>
                                    </select>
                                    <div class="form-text">Choose your role to unlock the right features</div>
                                </div>

                                <!-- Basic Information -->
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="firstName" class="form-label">First Name</label>
                                            <input name="firstName" type="text" class="form-control" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="lastName" class="form-label">Last Name</label>
                                            <input name="lastName" type="text" class="form-control" required>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="username" class="form-label">Username</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                        <input name="username" type="text" class="form-control" required>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                        <input name="email" type="email" class="form-control" required>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="phone" class="form-label">Phone Number</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                        <input name="phone" type="tel" class="form-control" required>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                        <input name="password" type="password" class="form-control" required>
                                    </div>
                                </div>

                                <!-- Property Owner Specific Fields -->
                                <div id="propertyOwnerFields" style="display: none;">
                                    <hr class="my-4">
                                    <div class="d-flex align-items-center mb-3">
                                        <i class="fas fa-building fa-2x text-success me-3"></i>
                                        <h5 class="mb-0 text-success">Company Information</h5>
                                    </div>
                                    <div class="mb-3">
                                        <label for="companyName" class="form-label">Company Name</label>
                                        <input name="companyName" type="text" class="form-control">
                                    </div>
                                    <div class="mb-3">
                                        <label for="licenseNumber" class="form-label">License Number (if applicable)</label>
                                        <input name="licenseNumber" type="text" class="form-control">
                                    </div>
                                </div>

                                <!-- Broker Specific Fields -->
                                <div id="brokerFields" style="display: none;">
                                    <hr class="my-4">
                                    <div class="d-flex align-items-center mb-3">
                                        <i class="fas fa-user-tie fa-2x text-info me-3"></i>
                                        <h5 class="mb-0 text-info">Broker Information</h5>
                                    </div>
                                    <div class="mb-3">
                                        <label for="brokerLicense" class="form-label">Broker License Number</label>
                                        <input name="brokerLicense" type="text" class="form-control" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="agency" class="form-label">Agency/Company</label>
                                        <input name="agency" type="text" class="form-control" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="specialization" class="form-label">Specializations (comma-separated)</label>
                                        <input name="specialization" type="text" class="form-control" placeholder="e.g., residential, commercial, luxury">
                                    </div>
                                </div>

                                <div class="d-grid gap-2 mt-4">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fas fa-user-plus me-2"></i>Create Account
                                    </button>
                                </div>
                            </form>
                            
                            <hr class="my-4">
                            <div class="text-center">
                                <p class="mb-2">Already have an account?</p>
                                <a href="/login" class="btn btn-outline-primary">
                                    <i class="fas fa-sign-in-alt me-2"></i>Login
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.card {
    border-radius: 15px;
}

.card-header {
    border-radius: 15px 15px 0 0 !important;
}

.form-select-lg {
    font-size: 1.1rem;
    padding: 0.75rem 1rem;
}

.input-group-text {
    background-color: #f8f9fa;
    border-color: #dee2e6;
}

#propertyOwnerFields, #brokerFields {
    background-color: #f8f9fa;
    padding: 1.5rem;
    border-radius: 10px;
    margin: 1rem 0;
}

.form-control:focus, .form-select:focus {
    border-color: var(--bs-primary);
    box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
}
</style>

<script>
function toggleFields() {
    const userType = document.getElementById('userType').value;
    const propertyOwnerFields = document.getElementById('propertyOwnerFields');
    const brokerFields = document.getElementById('brokerFields');
    
    // Hide all fields first
    propertyOwnerFields.style.display = 'none';
    brokerFields.style.display = 'none';
    
    // Show relevant fields based on selection
    if (userType === 'property_owner') {
        propertyOwnerFields.style.display = 'block';
        // Make broker-specific required fields optional for property owners
        document.querySelectorAll('#brokerFields input[required]').forEach(input => {
            input.removeAttribute('required');
        });
    } else if (userType === 'broker') {
        brokerFields.style.display = 'block';
        // Make property owner-specific required fields optional for brokers
        document.querySelectorAll('#propertyOwnerFields input[required]').forEach(input => {
            input.removeAttribute('required');
        });
    } else {
        // For buyers, make all optional fields non-required
        document.querySelectorAll('#propertyOwnerFields input, #brokerFields input').forEach(input => {
            input.removeAttribute('required');
        });
    }
}

// Initialize on page load
document.addEventListener('DOMContentLoaded', function() {
    toggleFields();
    // Prevent form submission without selecting a role
    const form = document.querySelector('form[action="/signup"]');
    if (form) {
        form.addEventListener('submit', function(e) {
            const userTypeEl = document.getElementById('userType');
            if (!userTypeEl || !userTypeEl.value) {
                e.preventDefault();
                e.stopPropagation();
                alert('Please select a role (Buyer, Property Owner, or Broker) to continue.');
                userTypeEl.focus();
                return false;
            }
        });
    }
});
</script>